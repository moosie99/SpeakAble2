<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,height = device-height ,initial-scale=1.0" />
    <title>@ViewData["Title"] - SpeakAble</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Test9.styles.css" asp-append-version="true" />
</head>
<body>
    <header style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; background-color:#BBD0FF;">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container" style="max-width:none;">
                <img src="~/media/logo.png" width="50px" style="display:block;" alt="Logo" />
                <a class="navbar-brand" asp-area="" asp-page="/Index" id="headertitle">SpeakAble</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
            <div style="padding-right: 10px;" id="crisisbtn">
                <a style="color:black; text-decoration:none;" asp-page="/CrisisPage"><button class="nav-link" style="background-color:red; font-weight:900; font-family:'Century Gothic'; font-size:large; color:black;" >Crisis</button></a>
            </div>
            
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; background-color:#BBD0FF; padding-top: 20px; padding-bottom: 10px; line-height:initial;" id="footer">
        <div class="" style="width: 100%;">
            <p style="display:inline-block; margin-left:20px; text-align:center; padding:5px">&copy; 2024 - SpeakAble</p>
            <button id="helpbtn" style="padding:5px; display:inline-block;">Help</button>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>